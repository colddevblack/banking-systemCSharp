@model BancoExt.Models.TipoTransacaoModel

    @{
        ViewBag.Title = "Cadastro de Tipo de Transacao";
    }

    <h2>Cadastro de Tipo de Transacoes</h2>

    <h2>Novo Cadastro -  Tipo de Transacões</h2>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">

                        @using (Html.BeginForm("CadastrarTipoTransacao", "TipoTransacao"))

                        {
                            <div class="row">
                                <div class="col-lg-4">
                                    @Html.LabelFor(obj => obj.nometr)
                                    @Html.TextBoxFor(obj => obj.nometr, new { @class = "form-control" })
                                </div>
                            </div>
                             <div>
                                <input type="submit" value="Salvar" class="btn btn-warning" />

                            </div>
                        }
                </div>
                    </div>
                </div>
            </div>
        </div>
